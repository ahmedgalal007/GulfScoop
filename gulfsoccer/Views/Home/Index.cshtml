@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_MDB.cshtml";
}



<div id="mainArticle" class="jumbotron p-4 p-md-5 text-white rounded bg-dark" style="background-image:url(Content/UserFiles/Images/Facebook-followers.jpg)">
    <div class="col-md-6 px-0">
        <div>
            <h1 class="display-4 font-italic align-bottom">Title of a longer featured blog post</h1>
            <p class="lead my-3 align-bottom clearfix">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
            <p class="lead mb-0 align-bottom clearfix"><a href="#" class="text-white font-weight-bold">Continue reading...</a></p>
        </div>
        
    </div>
</div>

<div class="row mb-2">
    <div class="col-md-6">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-0 d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            </div>
            <div class="col p-4 right d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">World</strong>
                <h3 class="mb-0">Featured post</h3>
                <div class="mb-1 text-muted">Nov 12</div>
                <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="stretched-link">Continue reading</a>
            </div>

        </div>
    </div>
    <div class="col-md-6">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-success">Design</strong>
                <h3 class="mb-0">Post title</h3>
                <div class="mb-1 text-muted">Nov 11</div>
                <p class="mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="stretched-link">Continue reading</a>
            </div>
            <div class="col-auto d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            </div>
        </div>
    </div>
</div>

<!-- GridCardCategoryTitleParagraphReadMore  |  GridCardCategoryTitle  |  GridRecentPost -->
<!-- CardButtonTitleParagraphFooter  |  CardColumnPostWithCategory  |  CardTitleParagraphReadmore -->
<div role="mdb-grid"
     data-mdb-grid-type="GridCardDeck"
     data-mdb-grid-card="CardButtonTitleParagraphFooter"
     data-mdb-grid-category="5"
     data-mdb-grid-cols="3"
     data-mdb-grid-rows="1"
     data-mdb-grid-thumb-size="16X9">

</div>

<div role="mdb-grid"
     data-mdb-grid-type="GridRecentPost"
     data-mdb-grid-card="CardColumnPostWithCategory"
     data-mdb-grid-category="7"
     data-mdb-grid-cols="3"
     data-mdb-grid-rows="1"
     data-mdb-grid-thumb-size="16X9">

</div>
<div role="mdb-grid"
     data-mdb-grid-type="GridCardDeck"
     data-mdb-grid-card="CardTitleParagraphReadmore"
     data-mdb-grid-category="5"
     data-mdb-grid-cols="3"
     data-mdb-grid-rows="1"
     data-mdb-grid-thumb-size="16X9">

</div>

<main role="main" class="container">
    <h3 class="pb-4 mb-4 font-italic border-bottom">
        Category 1
    </h3>
    <div id="cards-container" class="row mb-3 card-deck">


    </div>
    <div id="grid-container">


    </div>

</main><!-- /.container -->
<script NOINDEX id="card-template" type="text/template">
    @*<div class="col-md-4 py-2">*@
    <div class="card h-100" style="width: 18rem;">
        <svg class="bd-placeholder-img card-img-top border-bottom" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
            <defs>
                <pattern id="img1" patternUnits="userSpaceOnUse" width="100%" height="180">
                    <image class='twombly' xlink:href="http://gastv.mx/wp-content/uploads/2014/05/jumex.jpg" x="0" y="0"
                           width="100%" height="180" />
                </pattern>
            </defs>
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="url(#img1)" style="background-color:dimgray"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
        <div class="card-body d-flex flex-column ">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">Description</p>
            <a href="#" class="btn btn-block btn-outline-primary mt-auto mb-0">Read More..</a>
        </div>
    </div>
    @*</div>*@
</script>

