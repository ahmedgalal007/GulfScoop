<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @*@Styles.Render("~/Content/mdbprocss")*@
    @Styles.Render("~/Content/mdbcss")

    <link rel="icon" href="~/favicon.ico" sizes="32x32">
    <!-- Custom styles for this template -->
    @*<link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">*@
    <link rel="stylesheet" id="better-framework-font-1-css" href="https://fonts.googleapis.com/css?family=Cairo:400,700,300,600&amp;subset=arabic" type="text/css" media="all">
</head>
<body class="" dir="rtl">
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center z-depth-1">
                <div class="col-4 pt-1">
                    <a class="text-muted float-right" href="#">Subscribe</a>
                </div>
                <div class="col-4 text-center">
                    <a class="blog-brand-logo text-dark" href="/"><h1 class="h1-responsive display-1 ">KHBAR<span class="red-text ">4</span><span class="text-red">U</span></h1></a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="text-muted" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5" /><path d="M21 21l-5.2-5.2" /></svg>
                    </a>
                    @if (Request.IsAuthenticated)
                    {
                        <form method="post" action="/Account/LogOff">
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-sm btn-outline-secondary" value="Logout" />
                        </form>
                    }
                    else
                    {

                        <a class="btn btn-sm btn-outline-secondary" href="/Account/Login">Login</a>
                    }
                </div>
            </div>
        </header>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                @Html.ActionLink("الرئيسية", "Index", "Home", new { @class = "p-2 text-muted" })
                @Html.ActionLink("عن الموقع", "About", "Home", new { @class = "p-2 text-muted" })
                @Html.ActionLink("إتصل بنا", "Contact", "Home", new { @class = "p-2 text-muted" })

                @*@Html.Partial("_LoginPartial")*@
            </nav>
        </div>

        @RenderBody()

    </div><!-- container -->

    <footer class="blog-footer">
        <p>Blog template built for <a href="https://www.gulfscoop.com/">gulfscoop</a> by <a href="https://twitter.com/mdo">@@mdo</a>.</p>
        <p>
            <a href="#">Back to top</a>
        </p>
    </footer>
    @Scripts.Render("~/bundles/post")
    @RenderSection("scripts", required: false)
</body>
</html>
